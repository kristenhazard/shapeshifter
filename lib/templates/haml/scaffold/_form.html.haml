- if @<%= singular_table_name %>.errors.any?
  - flash.now[:alert] = @<%= singular_table_name %>.errors.full_messages.join(', ').to_s

= form_for @<%= singular_table_name %>, html: {class: "form-horizontal"} do |f|

<% for attribute in attributes -%>
  .form-group
    = f.label :<%= attribute.name %>, class: "col-sm-2 control-label"
    .col-sm-10
      = f.<%= attribute.field_type %> :<%= attribute.name %>, class: "form-control"
<% end -%>
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit "Save", class: "btn btn-primary"
      = link_to "Cancel", <%= index_helper %>_path, data: {confirm: "Are you sure you want to Cancel?"}, class: "btn btn-default"
